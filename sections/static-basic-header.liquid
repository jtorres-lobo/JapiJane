

{% schema %}
{
  "name": "Header",
  "class": "site-header-wrapper",
  "settings": [
    {
      "type": "paragraph",
      "content": "This is the Basic header. If you want to change the header layout, go to the Layout section in the Theme settings tab. [Learn more](https://support.pixelunion.net/hc/en-us/articles/360022060854-Header-Layout-options)"
    },
    {
      "id": "sticky_header",
      "type": "checkbox",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "id": "full_width_header",
      "type": "checkbox",
      "label": "Enable full width header",
      "default": false
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "id": "menu",
      "type": "link_list",
      "label": "Main menu",
      "default": "main-menu"
    },
    {
      "type": "radio",
      "id": "navigation_layout",
      "label": "Navigation layout",
      "info": "When positioned inside the header, the links will be placed below the logo if they cannot fit the screen width.",
      "options": [
        {
          "value": "inside",
          "label": "Inside header"
        },
        {
          "value": "below",
          "label": "Below header"
        }
      ],
      "default": "inside"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "id": "desktop_logo",
      "type": "image_picker",
      "label": "Desktop",
      "info": "Square or landscape images recommended. [Learn more](https://support.pixelunion.net/hc/en-us/articles/360022033634)"
    },
    {
      "id": "desktop_logo_height",
      "type": "range",
      "label": "Height (in pixels)",
      "min": 20,
      "max": 120,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "radio",
      "id": "desktop_logo_position",
      "label": "Desktop logo position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "center"
    },
    {
      "id": "mobile_logo",
      "type": "image_picker",
      "label": "Mobile",
      "info": "Square or landscape images recommended. [Learn more](https://support.pixelunion.net/hc/en-us/articles/360022033634)"
    },
    {
      "id": "mobile_logo_height",
      "type": "range",
      "label": "Height (in pixels)",
      "min": 20,
      "max": 60,
      "step": 1,
      "unit": "px",
      "default": 30
    },
    {
      "type": "radio",
      "id": "mobile_logo_position",
      "label": "Mobile logo position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Bottom border"
    },
    {
      "id": "border_enabled",
      "type": "checkbox",
      "label": "Show bottom border",
      "default": false
    },
    {
      "id": "border_width",
      "type": "range",
      "label": "Border width",
      "min": 1,
      "max": 5,
      "step": 1,
      "unit": "px",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Search"
    },
    {
      "id": "enable_live_search",
      "type": "checkbox",
      "label": "Enable live search",
      "default": true
    },
    {
      "type": "select",
      "id": "live_search_content_types",
      "label": "Display",
      "options": [
        {
          "value": "product",
          "label": "Products only"
        },
        {
          "value": "page,product",
          "label": "Products and pages"
        },
        {
          "value": "article,product",
          "label": "Products and posts"
        },
        {
          "value": "article,page,product",
          "label": "Products, posts, and pages"
        }
      ],
      "default": "article,page,product"
    },
    {
      "id": "search_quick_links",
      "type": "link_list",
      "label": "Quick links",
      "info": "Display menu links below the search box the first time it is opened. This menu wonâ€™t show dropdown items."
    }
  ],
  "blocks": [
    {
      "type": "meganav_images",
      "name": "Mega navigation",
      "settings": [
        {
          "id": "meganav_trigger",
          "type": "text",
          "label": "Mega navigation trigger",
          "info": "The menu item you want to convert to a mega navigation."
        },
        {
          "type": "header",
          "content": "Custom Image 1"
        },
        {
          "id": "image_1",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "text_1",
          "type": "text",
          "label": "Text"
        },
        {
          "id": "link_1",
          "type": "url",
          "label": "Link"
        },
        {
          "id": "position_1",
          "type": "select",
          "label": "Position",
          "options": [
            {
              "value": "first",
              "label": "First column"
            },
            {
              "value": "last",
              "label": "Last column"
            }
          ],
          "default": "first"
        },
        {
          "id": "size_1",
          "type": "select",
          "label": "Size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "small"
        },
        {
          "type": "header",
          "content": "Custom Image 2"
        },
        {
          "id": "image_2",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "id": "text_2",
          "type": "text",
          "label": "Text"
        },
        {
          "id": "link_2",
          "type": "url",
          "label": "Link"
        },
        {
          "id": "position_2",
          "type": "select",
          "label": "Position",
          "options": [
            {
              "value": "first",
              "label": "First column"
            },
            {
              "value": "last",
              "label": "Last column"
            }
          ],
          "default": "first"
        },
        {
          "id": "size_2",
          "type": "select",
          "label": "Size",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "large",
              "label": "Large"
            }
          ],
          "default": "small"
        }
      ]
    }
  ]
}

