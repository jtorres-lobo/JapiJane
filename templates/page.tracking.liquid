<script>
    document.addEventListener("DOMContentLoaded", async () => {
    const input = document.querySelector('input[name="order"]');
    const button = document.querySelector("button.enviar_orden");
    const order_information = document.querySelector("#order_information");

    const sendOrder = async (value) => {
        try {
            if (value.length === 0) throw new Error("");
            const res = await fetch(`https://8j1067jkcl.execute-api.us-east-1.amazonaws.com/prod/custom/japijane?pid=${value}`, { method: "GET" });
            const resJson = await res.json();

            const getStatus = (status) => {
                const deliveryStatus = [
                    {
                        order: 1,
                        status: "order_paid",
                        label: "Compra procesada",
                    },
                    {
                        order: 2,
                        status: "confirmed",
                        label: "Compra preparada",
                    },
                    {
                        order: 3,
                        status: "picked_up",
                        label: "Compra retirada por courier",
                    },
                    {
                        order: 4,
                        status: "in_transit",
                        label: "Compra en tránsito a destino",
                    },
                    {
                        order: 5,
                        status: "delivered",
                        label: "Compra entregada",
                    },
                ];
                return deliveryStatus.filter((d) => d.status === status)[0];
            };

            if (res.status === 200) {
                const { status, promised_date, tracking_id, courier } = resJson;
                const { order, label } = getStatus(status);
                order_information.innerHTML = "";
                order_information.innerHTML = `
                    <div class="order_title">
                        <h3>Nº de compra: ${value}</h3>
						<p>
							Fecha estimada de entrega: ${promised_date}<br/><br/>
							Courier: ${courier}<br /><br/>
							Número Seguimiento: ${tracking_id}
  						</p>
                    </div>
                    <div class="order_status">
                        <b>Estado de la orden:</b> ${label}
                    </div>
                    <ul id="progress">

                        <li><div class="node ${order >= 1 ? "active_color" : "grey"} ${order === 1 ? "activated" : ""}"></div><p>Compra procesada</p></li>

                        <li><div class="divider ${order >= 2 ? "active_color" : "grey"}"></div></li>
                        <li><div class="node ${order >= 2 ? "active_color" : "grey"} ${order === 2 ? "activated" : ""}"></div><p>Compra preparada</p></li>

                        <li><div class="divider ${order >= 3 ? "active_color" : "grey"}"></div></li>
                        <li><div class="node ${order >= 3 ? "active_color" : "grey"} ${order === 3 ? "activated" : ""}"></div><p>Compra retirada por courier</p></li>

                        <li><div class="divider ${order >= 4 ? "active_color" : "grey"}"></div></li>
                        <li><div class="node ${order >= 4 ? "active_color" : "grey"} ${order === 4 ? "activated" : ""}"></div><p>Compra en tránsito a destino</p></li>

                        <li><div class="divider ${order >= 5 ? "active_color" : "grey"}"></div></li>
                        <li><div class="node ${order >= 5 ? "active_color" : "grey"} ${order === 5 ? "activated" : ""}"></div><p>Compra entregada</p></li>

                    </ul>
                `;
            } else {
                order_information.innerHTML = `
                    <div class="order_title">
                        <h3>La compra no existe</h3>
                    </div>
                `;
            }
        } catch (error) {
            order_information.innerHTML = `
                <div class="order_title">
                    <h3>La compra no existe</h3>
                </div>
            `;
        }
    };

    button.addEventListener("click", async () => {
        order_information.innerHTML = `
            <div class="order_title">
                <h3>Cargando...</h3>
            </div>
        `;
        await sendOrder(input.value);
    });
  
    function triggerEvent(element, event) {
		const clickEvent = new Event(event);
		element.dispatchEvent(clickEvent);
    }
  
    function getParameterByName(name, url) {
    	var match = RegExp('[?&]' + name + '=([^&]*)').exec(url);
    	return match && decodeURIComponent(match[1].replace(/\+/g, ' '));
	};
    
    const trackingId = getParameterByName('order_name', window.location.search);
    if (trackingId != null) {
		console.log(trackingId);
		document.getElementById('order').value = trackingId;
      	triggerEvent(document.getElementById('order-submit'), 'click');
    }
});
</script>
